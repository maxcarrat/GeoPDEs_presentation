  urldate = {2016-08-11},
  journal = {Computer Methods in Applied Mechanics and Engineering},
  author = {Zander, Nils and Bog, Tino and Elhaddad, Mohamed and Frischmann, Felix and Kollmannsberger, Stefan and Rank, Ernst},
  month = oct,
