  pages = {316--339},
  file = {ScienceDirect Full Text PDF:/home/davide/.mozilla/firefox/eyo4nh6s.default/zotero/storage/2548CPUR/Hennig et al. - 2016 - Bézier extraction and adaptive refinement of trunc.pdf:application/pdf;ScienceDirect Snapshot:/home/davide/.mozilla/firefox/eyo4nh6s.default/zotero/storage/R2R24WM3/S0045782516300913.html:text/html}
